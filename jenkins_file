pipeline {
    agent any

    stages {
        stage('Git pull source code') {
            steps {
                git branch: 'main', url: 'https://github.com/itsmeharitha/hello-world.git'
            }
        }
        stage('Build source') {
            steps {
                sh ''' whoami
                pwd
               javac hello_world.java
               java hello_world.java
               '''
               
            }
        }
        stage('SonarQube analysis') {
        steps{
        withSonarQubeEnv('sonarqube-8.9') {
        sh "java sonar:sonar"
    }
        
         stage('Archieve') {
            steps {
                echo 'zipping'
                sh ''' zip -r snapshot.zip .
                '''
            }
        }
    }
}
