pipeline {
    agent any

    stages {
        stage('Git pull source code') {
            steps {
                git branch: 'main', url: 'https://github.com/itsmeharitha/hello-world.git'
            }
        }
        stage('Build source') {
            steps {
                sh ''' whoami
                cd hari
                pwd
                mvn clean install package
                '''
            }
        }
        
         stage('Archieve') {
            steps {
                echo 'zipping'
                sh ''' zip -r snapshot.zip .
                '''
            }
        }
    }
}
